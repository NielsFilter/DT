<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                    
                    xmlns:m="clr-namespace:DesignerTool.Styles.Wpf.Controls;assembly=DesignerTool.Styles.Wpf"
                    xmlns:ap="clr-namespace:DesignerTool.Common.Mvvm.AttachedProperties;assembly=DesignerTool.Common">

    <Style x:Key="TxtDefault" TargetType="TextBox" BasedOn="{StaticResource MetroTextBox}">
        <Setter Property="Margin" Value="10" />
        <Setter Property="m:TextboxHelper.ClearTextButton" Value="True"/>
    </Style>

    <Style x:Key="PwdDeafult" TargetType="PasswordBox" BasedOn="{StaticResource MetroPasswordBox}">
        <Setter Property="Margin" Value="10" />
        <Setter Property="m:TextboxHelper.ClearTextButton" Value="True"/>
        <Setter Property="m:TextboxHelper.Watermark" Value="Password"/>
        <Setter Property="ap:PasswordBoxAttached.IsPasswordTextBindable" Value="True"/>
    </Style>
    
</ResourceDictionary>