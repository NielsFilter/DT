<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BtnDefault" TargetType="Button" BasedOn="{StaticResource AccentedSquareButtonStyle}">
        <Setter Property="Height" Value="40" />
        <Setter Property="Width" Value="150" />
    </Style>

    <Style x:Key="BtnCircle" TargetType="Button" BasedOn="{StaticResource MetroCircleButtonStyle}">
        <Setter Property="Height" Value="60" />
        <Setter Property="Width" Value="60" />
    </Style>

    <Style x:Key="BtnHome" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
        <Setter Property="Content">
            <Setter.Value>
                <Path Style="{StaticResource vcHome}" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button, Mode=FindAncestor}}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BtnMenu" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
        <Setter Property="Content">
            <Setter.Value>
                <Path Style="{StaticResource vcList}" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button, Mode=FindAncestor}}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>

