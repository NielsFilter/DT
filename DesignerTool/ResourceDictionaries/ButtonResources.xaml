            <Setter.Value>
                <Path Style="{StaticResource vcRefresh}" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button, Mode=FindAncestor}}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BtnAdd" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
