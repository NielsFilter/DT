            <Setter.Value>
                <Path Style="{StaticResource vcEdit}" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button, Mode=FindAncestor}}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BtnDelete" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
