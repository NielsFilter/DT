<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BtnDefault" TargetType="Button" BasedOn="{StaticResource AccentedSquareButtonStyle}">
        <Setter Property="Height" Value="45" />
        <Setter Property="Width" Value="200" />
    </Style>

    <Style x:Key="BtnCircle" TargetType="Button" BasedOn="{StaticResource MetroCircleButtonStyle}">
        <Setter Property="Height" Value="60" />
        <Setter Property="Width" Value="60" />
    </Style>

    <Style x:Key="BtnHome" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
        <Setter Property="Content">
            <Setter.Value>
                <Path Style="{StaticResource vcHome}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BtnMenu" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
        <Setter Property="Content">
            <Setter.Value>
                <Path Style="{StaticResource vcList}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BtnPrev" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
        <Setter Property="Content">
            <Setter.Value>
                <Path Style="{StaticResource vcPrev}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BtnNext" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
        <Setter Property="Content">
            <Setter.Value>
                <Path Style="{StaticResource vcNext}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BtnFirst" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
        <Setter Property="Content">
            <Setter.Value>
                <Path Style="{StaticResource vcFirst}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="BtnLast" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
        <Setter Property="Content">
            <Setter.Value>
                <Path Style="{StaticResource vcLast}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>
