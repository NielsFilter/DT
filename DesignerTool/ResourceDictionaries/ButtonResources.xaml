                <Path Style="{StaticResource vcLast}" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button, Mode=FindAncestor}}" Margin="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BtnRefresh" TargetType="Button" BasedOn="{StaticResource BtnCircle}">
        <Setter Property="Padding" Value="5" />
