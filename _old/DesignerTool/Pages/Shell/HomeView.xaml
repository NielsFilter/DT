<UserControl x:Class="DesignerTool.Pages.Shell.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:pan="clr-namespace:DesignerTool.Controls.Panorama;assembly=DesignerTool.Controls">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--<pan:Panorama Grid.Row="1" x:Name="pan" UseSnapBackScrolling="True" ItemsSource="{Binding PanoramaItems}" HorizontalAlignment="Center" />-->

        </Grid>
        <!-- Command Section at the bottom -->
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <Path Style="{StaticResource vcHome}" Margin="20,0,5,0" Width="75"/>
                <TextBlock Text="Home" HorizontalAlignment="Left" VerticalAlignment="Center" />

        </Grid>
    </Grid>
</UserControl>
